# MySQL Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=tamil_movies_db

# Scraper — update domain here if 1tamilmv changes URL
SCRAPER_BASE_URL=https://1tamilmv.earth/

# OMDB API (IMDb data) — free 1000 req/day
# Sign up at: http://www.omdbapi.com/apikey.aspx  (select FREE tier, enter email)
OMDB_API_KEY=your_omdb_api_key_here

# Protects POST /api/scrape — set a strong random string
# Leave empty to disable protection (not recommended in production)
SCRAPE_API_KEY=change_this_to_a_random_secret

# Comma-separated allowed CORS origins
# In production: replace with your actual frontend domain
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
